@model IEnumerable<NotiApp.Models.Nota>;
@{
    ViewData["Title"] = "Crear Nota";
}

<div class="text-center">
    <h1 class="display-4">Mis notas</h1>

    @if (Model.Count() > 0)
    {
        <div class="row">
            @foreach (var nota in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">@nota.TituloNota</h5>
                            <p class="card-text">@nota.Descripcion</p>
                            <a asp-action="EditarNota" asp-route-id="@nota.IdNota" class="btn btn-primary">Editar</a>
                            <a asp-action="EliminarNota" asp-route-id="@nota.IdNota" class="btn btn-danger">Eliminar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>Aún no tienes notas.</p>
        <a asp-action="CrearNota" class="btn btn-primary">Crear una nueva nota</a>
    }
</div>
